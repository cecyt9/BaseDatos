<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:ems="10" />

    <EditText
        android:id="@+id/contra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nombre"
        android:layout_below="@+id/nombre"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Base de Datos"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/eliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/actualizar"
        android:text="Elimina" />

    <Button
        android:id="@+id/actualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buscar"
        android:layout_alignBottom="@+id/buscar"
        android:layout_toLeftOf="@+id/eliminar"
        android:text="Actualiza" />

    <Button
        android:id="@+id/buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/agregar"
        android:layout_alignBottom="@+id/agregar"
        android:layout_toLeftOf="@+id/actualizar"
        android:text="Busca" />

    <Button
        android:id="@+id/agregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/buscar"
        android:text="Agrega" />

    <Button
        android:id="@+id/ultimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/adelante"
        android:layout_alignBottom="@+id/adelante"
        android:layout_alignRight="@+id/eliminar"
        android:layout_toRightOf="@+id/adelante"
        android:text=">>" />

    <Button
        android:id="@+id/primero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/agregar"
        android:layout_alignRight="@+id/agregar"
        android:layout_below="@+id/agregar"
        android:layout_marginTop="14dp"
        android:text="&lt;&lt;" />

    <Button
        android:id="@+id/atras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/primero"
        android:layout_alignBottom="@+id/primero"
        android:layout_alignLeft="@+id/buscar"
        android:layout_alignRight="@+id/buscar"
        android:text="&lt;" />

    <Button
        android:id="@+id/adelante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/atras"
        android:layout_alignBottom="@+id/atras"
        android:layout_alignLeft="@+id/actualizar"
        android:layout_alignRight="@+id/actualizar"
        android:text=">" />

    <TextView
        android:id="@+id/ED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/primero"
        android:layout_marginTop="26dp"
        android:layout_toLeftOf="@+id/atras"
        android:text="TextView" />

    <TextView
        android:id="@+id/mosNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mosCLave"
        android:layout_below="@+id/ED"
        android:layout_marginTop="15dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/mosCLave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mosNombre"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@+id/atras"
        android:text="TextView" />

</RelativeLayout>

